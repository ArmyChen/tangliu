function selectPaymentnow(obj)
{
  if (selectedPayment == obj)
  {

    return;
  }
  else
  {
    selectedPayment = obj;
  }


  
  Ajax.call('car.php?step=select_payment', 'payment=' + obj.value, orderSelectedResponse, 'GET', 'JSON');
}




