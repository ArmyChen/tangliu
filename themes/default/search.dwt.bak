<script type="text/javascript">

function guess_prev(){
var guess1=$("#guess1").css("display");
var guess2=$("#guess2").css("display");
var guess3=$("#guess3").css("display");
if(guess1=="block"){
$("#guess1").hide();
$("#guess2").hide();
$("#guess3").show();
}
if(guess2=="block"){
$("#guess3").hide();
$("#guess2").hide();
$("#guess1").show();
}	
if(guess3=="block"){
$("#guess3").hide();
$("#guess1").hide();
$("#guess2").show();
}		
}
function guess_next(){
var guess1=$("#guess1").css("display");
var guess2=$("#guess2").css("display");
var guess3=$("#guess3").css("display");
if(guess1=="block"){
$("#guess1").hide();
$("#guess3").hide();
$("#guess2").show();
}
if(guess2=="block"){
$("#guess2").hide();
$("#guess1").hide();
$("#guess3").show();
}	
if(guess3=="block"){
$("#guess3").hide();
$("#guess2").hide();
$("#guess1").show();
}		
}



</script>
